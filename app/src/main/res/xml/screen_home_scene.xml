<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/collapsed"
        motion:constraintSetStart="@id/expanded"
        motion:duration="800"
        motion:motionInterpolator="standard">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/products_recycler_vew"
            motion:touchAnchorSide="top"
            motion:dragScale="0.8"
            motion:moveWhenScrollAtTop="true" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="50"
                motion:motionTarget="@id/appbar_container" />

            <KeyAttribute
                android:alpha="0.0"
                android:scaleX="0.85"
                android:scaleY="0.85"
                motion:framePosition="60"
                motion:motionTarget="@id/storiesRv" />

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="85"
                motion:motionTarget="@id/viewPager" />

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/viewPager"
                motion:percentY="0.2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint android:id="@id/appbar_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                motion:layout_constraintBottom_toTopOf="parent" />
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@id/storiesRv">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toTopOf="parent" />
            <PropertySet android:alpha="0.0" />
            <Transform
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </Constraint>

        <Constraint android:id="@id/viewPager">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                motion:layout_constraintBottom_toTopOf="parent" />
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint android:id="@id/categories_recycler_view">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/products_recycler_vew">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/categories_recycler_view" />
        </Constraint>

    </ConstraintSet>

</MotionScene>